<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:background="@color/title_background"
    android:baselineAligned="false" >

    <LinearLayout
        android:id="@+id/panelIconStatistics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btnStatistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="menuOnClicker"
            android:background="@drawable/btn_statistics_status" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelIconSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btnExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_export_status"
            android:onClick="menuOnClicker"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelIconExport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_settings_status"
            android:onClick="menuOnClicker"
            android:gravity="center" />

    </LinearLayout>
</LinearLayout>